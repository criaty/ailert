{
  "compileOnSave": false,
  "compilerOptions": {
    /* Compiler options */
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Optimization options */
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true, // Use tslib to reduce the size of the output files. tslib should be added to the package.json file with npm i tslib

    /* Linting options */
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Custom library aliases */
    "paths": {
      "@ailert/model": ["libs/model/src/index.ts"],
      "@ailert/model-types": ["libs/model-types/src/index.ts"],
      "@ailert/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
